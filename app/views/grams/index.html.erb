  <div class='row social-media-icons'>
    <br /><br />
    <%= link_to 'https://github.com/diantai23' do %>
      <span class="fa fa-github-alt fa-3x social-button img-fluid" aria-hidden="true"></span>
    <% end %>
    <%= link_to 'https://medium.com/@diantai' do %>
