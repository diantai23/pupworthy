<div class="col-10 offset-1 col-sm-8 offset-sm-2 col-md-6 offset-md-3">
  <% @grams.each do |gram| %>
  <div class="card">
    <div class='row'>
      <div class="col handle">
        <%= gram.user.email %>
      </div>
      <div class='col gram-actions'>
        <% if current_user && current_user == gram.user %>
          <%= link_to 'Delete', gram_path(gram), method: :delete, data: {confirm: 'Are you sure?'}, class: "gram-actions float-right" %>
        <% end %>
      </div>
    </div>
    <%= image_tag gram.picture, class: 'img-fluid' %>
    <div class='row'>
      <div class='col'>
        <p><%= gram.message %></p>
      </div>
      <div class="col gram-actions">
        <% if current_user && current_user == gram.user %>
          <%= link_to 'Edit', edit_gram_path(gram), class: 'float-right' %>
        <% end %>
      </div>
    </div>
    <br class="clear-fix" />

    <div class='comments'>
      <% gram.comments.each do |comment| %>
        <div class='comment'>
          <span class='comment_handle'>
            <%= comment.user.email %>
          </span>
          <%= comment.message %>
        </div>
      <% end %>

      <div class='add_comment'>
        <%= simple_form_for Comment.new, url: gram_comments_path(gram) do |f| %>
          <%= f.input :message %>
          <%= f.submit 'Add Comment', class: 'my-btn' %>
        <% end %>
      </div>
    </div>
  </div>
  <% end %>
</div>
