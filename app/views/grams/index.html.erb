<div class="col-10 offset-1 col-sm-8 offset-sm-2 col-md-6 offset-md-3">
  <% @grams.reverse.each do |gram| %>
  <div class="card">
    <div class="handle">
      <%= gram.user.email %>
      <div class="gram-actions float-right">
        <% if current_user && current_user == gram.user %>
          <%= link_to gram_path(gram), method: :delete, data: {confirm: 'Are you sure?'}, class: "gram-actions float-right" do %>
            <i class="fa fa-trash-o fa-2x" aria-hidden="true"></i>
          <% end %>
          <%= link_to edit_gram_path(gram), class: 'float-right' do %>
            <i class="fa fa-pencil-square-o fa-2x" aria-hidden="true"></i>
          <% end %>
        <% end %>
      </div>
    </div>

    <%= image_tag gram.picture, class: 'img-fluid' %>

    <div class='gram-message'>
      <p><%= gram.message %></p>
    </div>

    <div class='comments'>
      <% gram.comments.each do |comment| %>
        <div class='comment'>
          <span class='comment_handle'>
            <%= comment.user.email %>
          </span>
          <%= comment.message %>
        </div>
      <% end %>

      <div class='add_comment'>
        <%= simple_form_for Comment.new, url: gram_comments_path(gram) do |f| %>
          <%= f.input :message, label: false %>
          <%= f.submit 'Add Comment', class: 'my-btn' %>
        <% end %>
      </div>
    </div>
  </div>
  <% end %>
</div>
<br /><br /><br /><br /><br /><br />

